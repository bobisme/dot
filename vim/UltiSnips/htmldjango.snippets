snippet t "Django tag" !b
{% $1 %}
    $0
{% end${1/(block \w*|\w*).*/$1/} %}
endsnippet

snippet trans "Django `trans`" !b
{% trans '$1' %}
endsnippet

snippet tt "Django one-liner" !b
{% $1 %}
endsnippet

snippet url "Django url tag" !b
{% url '$1'${2: ${3:var1=val}}${4: as ${5:templ_var}} %}
endsnippet
